<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Clock.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:Clock"
	Shell.FlyoutBehavior="Disabled"
	Title="Clock">

	<TabBar CurrentItem="{x:Reference Clock}">
		<ShellContent
			Title="Будильник"
			ContentTemplate="{DataTemplate local:AlarmPage}"
			Route="Alarm" />
		<ShellContent
			x:Name="Clock"
			Title="Часы"
			ContentTemplate="{DataTemplate local:ClockPage}"
			Route="Clock" />
		<ShellContent
			Title="Секундомер"
			ContentTemplate="{DataTemplate local:StopwatchPage}"
			Route="Stopwatch" />
		<ShellContent
			Title="Таймер"
			ContentTemplate="{DataTemplate local:TimerPage}"
			Route="Timer" />
	</TabBar>

</Shell>