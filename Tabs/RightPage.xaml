<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Tabs.RightPage"
			 Title="Ручной расчёт"
			 Loaded="OnPageLoaded">

	<StackLayout Orientation="Vertical">
		<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
			<Switch 
				BindingContext="{x:Reference MagicArea}" 
				IsToggled="{Binding Path=IsEnabled}"/>
			<Label 
				Text="Включить вкладку" 
				VerticalOptions="CenterAndExpand"/>
		</StackLayout>
		<StackLayout 
			x:Name="MagicArea" 
			Orientation="Vertical"
			Padding="10,0"
			IsEnabled="False">
			<StackLayout 
				Orientation="Horizontal" 
				Spacing="15">
				<HorizontalStackLayout>
					<Label Text="Месяц: "/>
					<Entry
						x:Name="MonthNumber" 
						IsReadOnly="True"/>
				</HorizontalStackLayout>
				<HorizontalStackLayout>
					<Label Text="Время года: "/>
					<Entry
					x:Name="Season" 
					IsReadOnly="True"/>
				</HorizontalStackLayout>
			</StackLayout>
			<Button 
				Text="Рассчитать" 
				HorizontalOptions="FillAndExpand" 
				Clicked="OnButtonClicked"/>
			<ScrollView>
				<StackLayout 
					x:Name="Months" 
					Orientation="Vertical"/>
			</ScrollView>
		</StackLayout>
	</StackLayout>
</ContentPage>